<AuthorizeView>
    <Authorized>

        <ul class="navbar-nav mb-2 mb-lg-0 float-end">
            <li class="nav-item">
                <NavLink class="nav-link" href="Identity/Account/Manage">
                    Hola, @context.User.Identity?.Name!
                </NavLink>
            </li>
            <li class="nav-item">
                <form class="d-flex" method="post" action="Identity/Account/LogOut">
                    <button type="submit" class="nav-link btn btn-link">Desconectar</button>
